                              <h1 class="title">Les Médecins</h1>
              
                                          
                              <div class="tabs"></div>
              
              
            </div> <!-- /#content-header -->
          
          <div id="content-area">
              <div id="block-system-main" class="block block-system  block-odd first clearfix">
  <div class="block-inner">

            

    <div class="content" >
      <div class="ds-2col-stacked-fluid node node-fable node-odd view-mode-full group-one-column clearfix">

  
  
      <div class="group-left">
      <div class="field field-name-field-num-ro-de-fable field-type-number-integer field-label-hidden"><div class="field-items"><div class="field-item even">Fable n° 12</div></div></div><div class="field field-name-field-livre field-type-taxonomy-term-reference field-label-hidden"><div class="field-items"><div class="field-item even">Livre V</div></div></div><div class="field field-name-field-adsense-top-fable field-type-text-long field-label-hidden"><div class="field-items"><div class="field-item even"><center>
<script type="text/javascript">
    google_ad_client = "ca-pub-0536312029867177";
    google_ad_slot = "5929400343";
    google_ad_width = 728;
    google_ad_height = 90;
